datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  client
  admin
}

model User {
  id            Int       @id @default(autoincrement())
  email         String    @unique
  password      String
  role          Role      @default(client)
  otp           String?
  otpExpiration DateTime?
  Profile       Profile?
  Order         Order[]
}

model Profile {
  id          Int       @id @default(autoincrement())
  userId      Int       @unique
  user        User      @relation(fields: [userId], references: [id])
  firstName   String
  lastName    String
  birthday    DateTime?
  bio         String?
  address     String?
  phoneNumber String?
}

model Product {
  id          String   @id
  name        String
  description String?
  price       Float
  quantity    Int      @default(0)
  sku         String   @unique
  category    String
  imageUrl    String?
  createdAt   DateTime @default(now())
}

model Order {
  id          String  @id
  userId      Int @unique
  user        User    @relation(fields: [userId], references: [id])
  address     String
}

